import java.awt.Color;
import java.awt.Graphics;

public abstract class Forma {
    protected int x;
    protected int y;
    protected Color cor;

    public Forma(int x, int y, Color cor) {
        this.x = x;
        this.y = y;
        this.cor = cor;
    }

    public abstract void desenhar(Graphics g);
    public abstract double calcularArea();
}
